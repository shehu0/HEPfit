EXE=analysis

CXX=@CMAKE_CXX_COMPILER@

CXXFLAGS=-Wall @CMAKE_CXX_FLAGS_RELEASE@
CXXFLAGS+=`@SUSYFIT_INSTALL_DIR@/bin/susyfit-config --cflags` 
CXXFLAGS+=@EXAMPLE_CXXFLAGS@
CXXFLAGS+=`@ROOT_CONFIG_PATH@/root-config --cflags` 
CXXFLAGS+=`@GSL_CONFIG_PATH@/gsl-config --cflags` 

LIBS=`@SUSYFIT_INSTALL_DIR@/bin/susyfit-config --libs`
LIBS+=@EXAMPLE_NOMCMC_LIBS@
LIBS+=`@ROOT_CONFIG_PATH@/root-config --libs` 
LIBS+=`@ROOT_CONFIG_PATH@/root-config --ldflags` 
LIBS+=`@GSL_CONFIG_PATH@/gsl-config --libs` 

all: $(EXE)

$(EXE): libmode_config.cpp Makefile
	$(CXX) $(CXXFLAGS) -o $@ $< $(LIBS)

clean:
	rm $(EXE)
